<html>
    <head>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <!-- <link rel="stylesheet" href="/../../node_modules/sweetalert2/dist/sweetalert2.min.js"> -->
        <link rel="stylesheet" href="/sa2.min.js">
    </head>
    <body>
        
        <div class="row">
            <div class="col-sm-10"></div>
            <div class="col-sm-2">
                <a href="/student/add" class="btn btn-success">Add Student</a>
            </div>
        </div>

        <div class="panel panel-info col-sm-8 col-sm-offset-2">
            <div class="panel-heading">Student's Data</div>
            <div class="panel-body">
        
                <table class="table">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Action</th>
                    </tr>
                    
                    <% sd.student.forEach(function(item, index){ %>
                        <tr>
                            <td><%= item.id %></td>
                            <td><%= item.name %></td>
                            <td><%= item.age %></td>
                            <td>
                                <a href="/student/edit/<%= item.id %>"><i class="fa fa-pencil"></i></a>&nbsp;
                                <a href="/student/delete/<%= item.id %>"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                        
                    <% }); %>

                </table>
            </div>
        </div>

        


    </body>
</html>